                      </div>
                      <div class="form-group">
                          <%= t.hidden_field :user_id, :value => session[:current_user_id] %>
                          <%= t.hidden_field :exercise_id, :value => e.id %>
                          <input type="submit" class="btn btn-primary add-tip" value="Add Tip">
                      </div>
                    <% end %>
                  </div>
                </div> -->
              </div>
                    <% end %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12 custom-workout show-workout-bottom-margin">
                    <%= link_to "Edit Workout", "/edit_workout/#{ @workout.id }", class: "btn btn-info edit-workout", :id => @workout.id  %>
                    <%= link_to "Delete Workout", @workout, class: "btn btn-danger delete-workout", method: :delete %>
                  </div>
                </div>
</div>

