                  <div class="col-md-12">
                    <%= form_for :tip, remote: true, url: "exercise/#{e.id}/create_tip/", method: :post, :html => { :id => "add_tip" } do |t| %>
                      <div class="form-group custom-font white">
                          <%= t.label :name %>
