<div class="container-fluid main-body">

                <div class="row show-workout-label background-color-grey white">
                  <div class="col-md-12">
                    <h4 class="label-text custom-font white"><span class="glyphicon glyphicon-edit"></span> <em>Title</em></h4>
                  </div>
                </div>
          <%= form_for @workout, url: 'update_workout', format: :json, method: :put, :html => { :id => "edit_workout_form" } do |ew| %>
                <div class="row show-workout-title background-color-grey">
                  <div class="col-md-12 edit-workout-field">
                    <div class="form-group">
                        <%= ew.text_field :title, placeholder: @workout.title, class: "edit-workout-text form-control" %>
                    </div>
                  </div>
                </div>

            <div class="row">
              <div class="col-md-12">
                <%= image_tag("workout-main.jpg", :alt => "Workout Default", :size => "450x300", :class => "workout-main") %>
              </div>
            </div>

            <div class="row">
                <div class="row show-workout-label white background-color-grey">
                  <div class="col-md-12">
                    <h4 class="label-text"><span class="glyphicon glyphicon-edit"></span> <em>Description</em></h4>
                  </div>
                </div>
                <div class="row show-workout-title white background-color-grey">
                    <div class="col-md-12 edit-workout-field">
                      <%= ew.text_area :description, placeholder: @workout.description, rows: 9, class: "edit-workout-description form-control" %>
                    </div>
                </div>
            </div>
            <div class="row">
                    <div class="row show-workout-label white background-color-grey">
                      <div class="col-md-12">
                        <h4 class="label-text"><em>Equipment</em></h4>
                      </div>
                    </div>
                    <div class="row show-workout-title background-color-grey">
                        <div class="col-md-12">
                          <% @workout.exercises.each do |ex| %>
                              <h4 class="workout-title"><%= ex.equipment %></h4>
                          <% end %>
                        </div>
                    </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="row show-workout-label white background-color-grey">
                      <div class="col-md-12">
                        <h4 class="label-text"><span class="glyphicon glyphicon-edit"></span> <em>Difficulty</em></h4>
                      </div>
                    </div>
                    <div class="row show-workout-title white background-color-grey">
                        <div class="col-md-12">
                            <h4>Current Difficulty: <%= @workout.difficulty %></h4>
                            <%= ew.select(:difficulty, options_for_select([['Beginner', 'Beginner'], ['Intermediate', 'Intermediate'], ['Advanced', 'Advanced'], ['Expert', 'Expert']]), {}, { :class => "form-control edit-workout-text" }) %>
                          <!-- </div> -->
                        </div>
                    </div>
              </div>
              <div class="col-md-6">
                  <div class="row show-workout-label white background-color-grey">
                      <div class="col-md-12">
                        <h4 class="label-text"><span class="glyphicon glyphicon-edit"></span> <em>Duration</em></h4>
                      </div>
                  </div>
                  <div class="row show-workout-duration white background-color-grey">
                        <div class="col-md-12">

                              <div class="radio">
                              <%= ew.radio_button :duration, "< 15 Minutes" %>
                              <%= ew.label(:duration_1, "< 15 Minutes") %>
                              </div>


                              <div class="radio">
                              <%= ew.radio_button :duration, "15-30 Minutes" %>
                              <%= ew.label(:duration_2, "15-30 Minutes") %>
                              </div>


                              <div class="radio">
                              <%= ew.radio_button :duration, "30-45 Minutes" %>
                              <%= ew.label(:duration_3, "30-45 Minutes") %>
                              </div>


                              <div class="radio">
                              <%= ew.radio_button :duration, "45 Minutes - 1 Hour" %>
                              <%= ew.label(:duration_4, "45 Minutes - 1 Hour") %>
                              </div>

                              <div class="radio">
                              <%= ew.radio_button :duration, "1 Hour - 1 Hour 30 Minutes" %>
                              <%= ew.label(:duration_2, "1 Hour - 1 Hour 30 Minutes") %>
                              </div>

                              <div class="radio">
                              <%= ew.radio_button :duration, "1 Hour 30 Minutes - 2 Hours" %>
                              <%= ew.label(:duration_5, "1 Hour 30 Minutes - 2 Hours") %>
                              </div>


                                <div class="radio">
                                  <%= ew.radio_button :duration, "2-3 Hours" %>
                                  <%= ew.label(:duration_6, "2-3 Hours") %>
                                </div>


                                <div class="radio">
                                  <%= ew.radio_button :duration, "3-4 Hours" %>
                                  <%= ew.label(:duration_7, "3-4 Hours") %>
                                </div>


                                <div class="radio">
                                  <%= ew.radio_button :duration, "4+ Hours" %>
                                  <%= ew.label(:duration_8, "4+ Hours") %>
                                </div>
                            </div>
                      </div>
                </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                    <div class="row show-workout-label white background-color-grey">
                        <div class="col-md-12">
                            <h4 class="label-text"><span class="glyphicon glyphicon-edit"></span> <em>Targeted Muscles</em></h4>
                        </div>
                    </div>
                    <div class="row show-workout-duration white background-color-grey">
                        <div class="col-md-12">
                          <%= ew.collection_check_boxes :targeted_muscle_ids, TargetedMuscle.all, :id, :name do |b| %>
                              <div class="collection-check-box">
                                <%= b.check_box %>
                                <%= b.label %>
                              </div>
                          <% end %>
                        </div>
                        <%= ew.hidden_field :user_id, :value => @workout.user.id %>
                        <%= ew.hidden_field :workout_id, :value => @workout.id %>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                  <div class="center-button">
                    <input type="submit" class="btn btn-primary update-workout" value="Update Workout">
                  </div>
                </div>
            </div>
          <% end %>
            <div class="row">
              <div class="col-md-12">
                  <% @workout.exercises.each do |e| %>
                            <div class="container-fluid testing2">
                              <div class="row">
                                <div class="col-md-12">
                                  <form action="/delete_exercise" data-remote="true" method="POST">
                                    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                                    <input type="hidden" name="_method" value="delete">
                                    <input type="hidden" name="exercise_id" value="<%= e.id %>">
                                    <input type="hidden" name="workout_id" value="<%= @workout.id %>">
                                    <input type="submit" class="btn btn-danger delete-exercise" value="x">
                                  </form>
                                </div>
                              </div>
                              <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                      <div class="col-md-4 dotted-border">
                            <%= form_for e, url: 'update_exercise', remote: true, format: :json, :html => { :id => "edit_workout_form" } do |ee| %>
                                        <%= ee.label :name %>
                                        <%= ee.text_field :name, placeholder: e.name, class: "edit-workout-text form-control" %>
                                      </div>
                                      <div class="col-md-4 dotted-border">
                                        <%= ee.label :difficulty %>
                                        <%= ee.select(:difficulty, options_for_select([['Beginner', 'Beginner'], ['Intermediate', 'Intermediate'], ['Advanced', 'Advanced'], ['Expert', 'Expert']]), {}, { :class => "form-control" }) %>
                                      </div>
                                      <div class="col-md-4 dotted-border">
                                        <h3 class="right-text-now"><span style="margin-right:25px"><em>Rating</em></span> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i>
                                      </div>
                                    </div>
                                    <div class="row">
                                      <div class="col-md-12">
                                        <h4 class="label-text"><span class="glyphicon glyphicon-edit"></span> <em>Description</em></h4>
                                      </div>
                                    </div>
                                    <div class="row">
                                      <div class="col-md-12">
                                        <%= ee.text_area :description, placeholder: e.description, rows: 9, class: "edit-workout-description form-control" %>
                                      </div>
                                    </div>
                                    <div class="row">
                                          <div class="col-md-6 dotted-border">
                                            <%= ee.label :equipment %>
                                            <%= ee.collection_select(:equipment, Equipment.all, :name, :name, { :prompt => true }, { :class => 'form-control' }) %>
                                            <!-- <h4>Equipment: <%= e.equipment %></h4> -->
                                          </div>
                                          <div class="col-md-2 dotted-border">
                                            <%= ee.label :sets %>
                                            <%= ee.text_field :sets, placeholder: e.sets, class: "edit-workout-text form-control" %>
                                          </div>
                                          <div class="col-md-2 dotted-border">
                                            <%= ee.label :reps %>
                                            <%= ee.text_field :reps, placeholder: e.reps, class: "edit-workout-text form-control" %>
                                          </div>
                                          <div class="col-md-2">
                                            <h4 class="center-text-now">creator: <%= e.user.username %></h4>
                                          </div>
                                    </div>
                                    <div class="row">
                                      <div class="col-md-12">
                                        <%= ee.hidden_field :id, :value => e.id %>
                                        <%= ee.hidden_field :workout_id, :value => @workout.id %>
                                        <%= ee.submit "Update Exercise", class: "btn btn-info update-exercise" %>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </div>
                      <% end %>
                      <div class="container-fluid description-workout-dash tips-workout-dash ">
                        <div class="row">
                            <div class="col-md-12">
                              <h4 class="custom-font white">Tips</h4>
                              <% if e.tips.nil? %>
                                <p class="custom-font white"><em>There are no tips for this exercise yet...</em></p>
                              <% else %>
                                <% e.tips.each do |t| %>
                                  <p><em><form action="/delete_tip" data-remote="true" method="POST">
                                    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                                    <input type="hidden" name="_method" value="delete">
                                    <input type="hidden" name="tip_id" value="<%= t.id %>">
                                    <input type="hidden" name="exercise_id" value="<%= e.id %>">
                                    <input type="hidden" name="workout_id" value="<%= @workout.id %>">
                                    <input type="submit" class="btn btn-danger delete-tip" value="x">
                                  </form> * <%= t.name %></em></p>
                                <% end %>
                              <% end %>
                            </div>
                        </div>
                        <div class="row">
                          <div class="col-md-12">
                            <%= form_for :tip, remote: true, url: "exercise/#{e.id}/create_tip/", method: :post, :html => { :id => "tip_form_edit", :class => 'white custom-font' } do |t| %>
                              <!-- <div class="form-group white"> -->
                                  <%= t.label :name %>
                                  <%= t.text_field :name, class: "form-control" %>
                              <!-- </div> -->
                              <!-- <div class="form-group"> -->
                                  <%= t.hidden_field :user_id, :value => session[:current_user_id] %>
                                  <%= t.hidden_field :exercise_id, :value => e.id %>
                                  <input type="submit" class="btn btn-warning add-tip-button" value="Add Tip">
                              <!-- </div> -->
                            <% end %>
                          </div>
                        </div>
                      </div>
                      <% end %>
                      <div class="container-fluid testing">
                          <div class="row">
                              <div class="col-md-12">
                                <%= form_for :exercise, remote: true, url: 'create_exercise', format: :json, :html => { :id => "exercise_form" } do |e| %>

                                  <div id="error_explanation" style='display:none;'>
                                    <ul>
                                      <!-- <% if @exercise %> -->
                                        <% if @exercise.errors.any? %>
                                          <% @exercise.errors.full_messages.each do |msg| %>
                                            <li style="color:red"><%= msg %></li>
                                          <% end %>
                                        <% end %>
                                      <!-- <% end %> -->
                                    </ul>
                                  </div>

                                  <div class="form-group">
                                    <div class="col-sm-4">
                                      <%= e.label :name %>
                                      <%= e.text_field :name, class: "form-control" %>
                                    </div>
                                    <div class="col-sm-4">
                                      <%= e.label :difficulty %>
                                      <%= e.select(:difficulty, options_for_select([['Beginner', 'Beginner'], ['Intermediate', 'Intermediate'], ['Advanced', 'Advanced'], ['Expert', 'Expert']]), {}, { :class => "form-control" }) %>
                                    </div>
                                    <div class="col-sm-4">
                                      <%= label :exercise, :user_id %>
                                      <%= text_field :exercise, :user_id, class: "form-control", value: @workout.user.username, placeholder: @workout.user.username, readonly: true %>
                                    </div>
                                  </div>
                                  <!-- SEPERATOR -->
                                  <div class="form-group">
                                    <div class="col-sm-12">
                                      <%= e.label :description %>
                                      <%= e.text_field :description, class: "form-control" %>
                                    </div>
                                  </div>
                                  <div class="form-group">
                                      <div class="col-sm-4">
                                        <%= e.label :equipment %>
                                        <%= e.collection_select(:equipment, Equipment.all, :name, :name, { :prompt => true }, { :class => 'form-control' }) %>
                                      </div>
                                      <div class="col-sm-4">
                                        <%= e.label :sets %>
                                        <%= e.text_field :sets, class: "form-control" %>
                                      </div>
                                      <div class="col-sm-4">
                                        <%= e.label :reps %>
                                        <%= e.text_field :reps, class: "form-control" %>
                                      </div>
                                        <%= e.hidden_field :user_id, :value => @workout.user.id %>
                                        <%= e.hidden_field :workout_id, :value => @workout.id %>
                                  </div>
                                  <div class="form-group">
                                      <div class="col-sm-12">
                                        <div class="container button-centering">
                                            <%= e.submit "Add Exercise", class: "btn btn-primary add-exercise button-width-full" %>
                                        </div>
                                      </div>
                                  </div>
                                <% end %>
                        </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="container button-centering">
                        <%= link_to "Delete Workout", @workout, class: "sm-add-exercise btn btn-danger delete-workout", method: :delete %>
                      </div>
                    </div>
                  </div>
                </div>
